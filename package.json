    "eslint-webpack-plugin": "^2.5.3",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "parcel": "^2.8.0",
    "parcel-namer-rewrite": "^2.0.0-rc.3",
    "parcel-reporter-static-files-copy": "^1.4.0",
    "postcss": "^8.4.18",
    "postcss-nested": "^6.0.1",
    "prettier": "^2.2.1",
    "process": "^0.11.10",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.2.4"
  },
  "volta": {
    "node": "20.9.0"
  },
  "staticFiles": {
    "staticPath": "static"
  },
  "keywords": [
    "dddice",
    "dice",
    "browser"
  ],
  "lint-staged": {
    "{**/*,*}.{css,json,html}": [
      "prettier --write"
    ],
    "*.ts*": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "parcel-namer-rewrite": {
    "hashing": "never"
  }
}
