{
  "name": "dddice-foundry-plugin",
  "source": [
    "src/dddice.ts",
    "src/dddice.css",
    "src/templates/ConfigPanel.html"
  ],
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "version": "0.5.2",
  "description": "Roll 3D digital dice using Foundry VTT.",
  "repository": {
    "type": "git",
