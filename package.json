  },
  "license": "MIT",
  "homepage": "https://dddice.com",
  "author": "dddice <developers@dddice.com>",
  "private": true,
  "scripts": {
    "start": "parcel --dist-dir=data/Data/modules/dddice --port 2345",
    "build": "parcel build",
    "lint": "eslint src",
    "clean": "rm -rf .parcel-cache && sudo rm -rf data/Data/modules/dddice",
    "test": "jest"
  },
  "dependencies": {
    "classnames": "^2.3.2",
